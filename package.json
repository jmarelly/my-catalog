{
  "name": "product-catalog-monorepo",
  "version": "1.0.0",
  "description": "Product Catalog Application - Monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client:install": "cd client && npm install",
    "server:install": "cd server && npm install",
    "client:dev": "cd client && npm run dev",
    "server:dev": "cd server && npm run start:dev",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "client:start": "cd client && npm run preview",
    "server:start": "cd server && npm run start:dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "db:init": "cd server && npm run db:generate && npm run db:push && cd .."
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "product-catalog",
    "monorepo",
    "react",
    "typescript",
    "express",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "MIT"
}
